{
  "name": "@storyblok/richtext-resolver",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@8.10.2",
  "description": "A monorepo for the Storyblok RichText Resolver",
  "author": "Alvaro Saburido <hola@alvarosaburido.dev> (https://github.com/alvarosabu/)",
  "license": "MIT",
  "keywords": [
    "storyblok",
    "richtext",
    "resolver"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/storyblok-richtext.es.js",
      "require": "./dist/storyblok-richtext.umd.js"
    }
  },
  "main": "./dist/storyblok-richtext.es.js",
  "module": "./dist/storyblok-richtext.js",
  "types": "./dist/index.d.ts",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:packages": "pnpm -r --filter='./packages/*' run build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:packages": "pnpm -r --parallel --filter='./packages/*' run lint",
    "lint:packages:fix": "pnpm -r --parallel --filter='./packages/*' run lint:fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "playground": "cd playground && npm run dev",
    "playground:vue": "cd playground/vue && npm run dev",
    "playground:react": "cd playground/react && npm run dev",
    "playground:all": "pnpm -r --parallel --filter='./playground/*' run dev"
  },
  "devDependencies": {
    "@alvarosabu/eslint-config": "^1.0.0",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitest/ui": "^1.4.0",
    "kolorist": "^1.8.0",
    "pathe": "^1.1.2",
    "typescript": "^5.4.3",
    "vite": "^5.2.7",
    "vite-plugin-banner": "^0.7.1",
    "vite-plugin-dts": "^3.8.1",
    "vite-plugin-inspect": "^0.8.3",
    "vite-plugin-qrcode": "^0.2.3",
    "vitest": "^1.4.0"
  }
}
